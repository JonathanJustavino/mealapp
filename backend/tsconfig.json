{
   "compilerOptions": {
      "lib": [
         "es2021"
      ],
      "baseUrl": "src",
      "paths": {
         "@db/*": ["db/*"],
         "@routes/*": ["routes/*"],
         "@entity/*": ["entity/*"],
         "@plugins/*": ["plugins/*"],
         "@migration/*": ["migration/*"],
         "@columns/*": ["db/table/*"],
      },
      "target": "es2021",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "resolveJsonModule": true,
   }
}