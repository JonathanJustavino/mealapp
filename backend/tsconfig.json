{
   "compilerOptions": {
      "lib": [
         "es2021"
      ],
      "baseUrl": "src",
      "paths": {
         "@entity/*": ["entity/*"],
         "@migration/*": ["migration/*"],
         "@db/*": ["db/*"],
      },
      "target": "es2021",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true
   }
}